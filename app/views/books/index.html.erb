<div class="container">
	<div class="row">
		<div class="col-xs-3">
			<%= render 'users/list', user: current_user, book: @book %>
		</div>
		<div class="col-xs-9">
			<table class="table table-striped">

	 			<h2>Books</h2>

	 			<tr>
	 			 <th></th>
	 			 <th>Title</th>
	 			 <th>Opinion</th>
	 			</tr>

				<% @books.each do |book| %>
	 			<tr>
	 			 <td><%= link_to user_path(book.user.id) do %>
    				<%= attachment_image_tag book.user, :profile_image, :fill, 60, 60, format: 'jpeg', fallback: "no_image.jpg" %>
  					<% end %>
	 			 	</td>
	 			 <td><%= link_to book.title, book_path(book)%></td>
	 			 <td><%= book.body %></td>
	 			</tr>
        		<% end %>

			</table>
		</div>
	</div>
</div>