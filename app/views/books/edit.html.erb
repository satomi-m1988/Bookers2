<div class="container">
	<div class="row">
		<div class="col-lg-4"></div>
		<div class="col-lg-4">
		<h2>Editing Book</h2>
		<%= form_for(@book) do |f| %>
		<% if @book.errors.any? %>
		<div id="error_explanation" class="alert alert-danger">
			<h2><%= pluralize(@book.errors.count, "error") %> prohibited this book from being saved:</h2>
			<ul>
				<% @book.errors.full_messages.each do |message| %>
