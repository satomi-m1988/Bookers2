<div class="container">
	<div class="row">
		<div class="col-xs-3">
			<%= render 'users/list', user: @book.user, book: @book_new %>
		</div>
		<div class="col-xs-9">
		 <table class="table table-striped">

		 <h2>Book detail</h2>

		 <tr>
		  <td><%= attachment_image_tag @book.user, :profile_image, :fill, 60, 60, format: 'jpeg', fallback: "no_image.jpg" %><br>
		  	<%= link_to @user.name, user_path(@user) %></td>
		  <td><%= link_to @book.title, book_path(@book)%></td>
		  <td><%= @book.body %></td>
		  <% if @user.id == current_user.id %>
          <td><%= link_to "Edit", edit_book_path(@book) %></td>
		  <td><%= link_to "Destroy", book_path(@book), method: :delete, "data-confirm" => "本当に削除しますか？" %></td>
		  <% end %>
	     </tr> 
         </table>
        </div>
    </div>
</div>

