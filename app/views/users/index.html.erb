

<div class="container">
	<div class="row">
	　　　<div class="col-xs-3">
			<%= render 'users/list', user: current_user, book: @book %>
		　</div>
		<div class="col-xs-9">
          <table class="table table-striped">

		    <h2>Users</h2>

			<tr>
			 <th>image</th>
			 <th>name</th>
			 <th colspan="3"></th>
			</tr>

		   <% @users.each do |user| %>
			<tr>
			  <td><%= attachment_image_tag user, :profile_image, :fill, 60, 60, format: 'jpeg',fallback: "no_image.jpg" %></td>
			  <td><%= user.name %></td>
			  <td><%= link_to 'Show', user_path(user) %></td>
			</tr>
           <% end %>
       　　</table>
   　　　</div>
  　</div>
 </div>